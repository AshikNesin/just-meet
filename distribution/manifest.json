{
	"name": "Just Meet",
	"version": "0.0.1",
	"description": "Enhance you're every Google Meet Call",
	"homepage_url": "https://github.com/AshikNesin/just-meet",
	"manifest_version": 2,
	"minimum_chrome_version": "74",
	"icons": {
		"128": "icon.png"
	},
	"permissions": [
		"storage",
		"https://meet.google.com/*",
		"webRequest",
		"webRequestBlocking",
		"background"
	],
	"content_scripts": [
		{
			"matches": [
				"https://meet.google.com/*"
			],
			"js": [
				"inject.js"
			]
		}
	],
	"background": {
		"persistent": true,
		"scripts": [
			"browser-polyfill.min.js",
			"background.js"
		]
	},
	"options_ui": {
		"chrome_style": true,
		"page": "options.html"
	}
}